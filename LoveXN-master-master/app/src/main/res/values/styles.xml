<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Root.Theme.AppTheme" parent="Base.Theme.AppTheme">
        <!-- 解决activity切换时的黑屏问题 -->
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="Base.Theme.AppTheme" parent="Theme.AppTheme">
        <!-- 解决activity切换时的黑屏问题 -->
        <item name="android:windowIsTranslucent">true</item>
    </style>

        <style name="fbdialog" parent="android:style/Theme.Dialog">
            <!-- 背景透明 -->
            <item name="android:windowBackground">@android:color/transparent</item>
            <!-- 没有标题 -->
            <item name="android:windowNoTitle">true</item>
            <!-- 背景模糊 -->
            <item name="android:backgroundDimEnabled">true</item>
        </style>

    <style name="Theme.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Material Theme -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="CollapsingToolbarTitleStyle"
           parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/transparent</item>
    </style>
    <style name="CustomButtonStyle" parent="Crosswall.IOSButton">
        <item name="btn_strokeWidth">1dp</item>
        <item name="btn_strokeColor">@color/yellow</item>
        <item name="btn_blur">false</item>
        <item name="btn_cornerRadius">4dp</item>
        <item name="btn_unpressColor">@color/gray</item>
        <item name="btn_pressColor">@color/red</item>
        <item name="btn_text_unpressColor">@color/white</item>
        <item name="btn_text_pressColor">@color/white</item>
    </style>

    <style name="CustomRoundButtonStyle" parent="Crosswall.IOSButton">
        <item name="btn_strokeWidth">1dp</item>
        <item name="btn_strokeColor">@color/yellow</item>
        <item name="btn_blur">false</item>
        <item name="btn_cornerRadius">25dp</item>
        <item name="btn_unpressColor">@color/gray</item>
        <item name="btn_pressColor">@color/red</item>
        <item name="btn_text_unpressColor">@color/white</item>
        <item name="btn_text_pressColor">@color/white</item>
    </style>

    <style name="Crosswall"/>

    <style name="Crosswall.IOSButton">
        <item name="btn_strokeWidth">1dp</item>
        <item name="btn_strokeColor">@android:color/darker_gray</item>
        <item name="btn_blur">false</item>
        <item name="btn_cornerRadius">2dp</item>
        <item name="btn_unpressColor">@android:color/white</item>
        <item name="btn_pressColor">@android:color/darker_gray</item>
        <item name="btn_text_unpressColor">@android:color/darker_gray</item>
        <item name="btn_text_pressColor">@android:color/white</item>
    </style>
    <style name="Base.Theme.AppTheme.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Base.Theme.AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullscreenTheme" parent="Base.Theme.AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>




</resources>
