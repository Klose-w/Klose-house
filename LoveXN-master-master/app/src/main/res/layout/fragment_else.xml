<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<android.support.v4.widget.DrawerLayout
    android:id="@+id/mydrawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@color/bg_white"
       >


        <ViewFlipper android:id="@+id/viewflipper"
            android:background="#ffffff"
            android:layout_width="fill_parent"
            android:layout_height="235dp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:background="#000000"
            android:layout_margin="2dip"
            >
            <TableRow

                >

                <ImageButton

                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:id="@+id/imageButton"
                    android:background="@drawable/tub1"
                    android:layout_margin="1dip"

                    />

                <ImageButton
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:id="@+id/imageButton2"
                    android:background="@drawable/tub2"
                    android:layout_margin="1dip"/>

                <ImageButton
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:id="@+id/imageButton3"
                    android:background="@drawable/tub4"
                    android:layout_margin="1dip"/>
            </TableRow>
            <TableRow>

                <ImageButton
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:id="@+id/imageButton4"
                    android:background="@drawable/tub3"
                    android:layout_margin="1dip"/>

                <ImageButton
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:id="@+id/imageButton5"
                    android:background="@drawable/tub5"
                    android:layout_margin="1dip"/>

                <ImageButton
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:id="@+id/imageButton6"
                    android:background="@drawable/tub6"
                    android:layout_margin="1dip"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
</android.support.design.widget.CoordinatorLayout>

